<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.prj.fpt.project1ht.HelpActivity">

    <!--Layer1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sys_bg_play"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/activity_vertical_margin">>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewStop"
                android:src="@drawable/sys_ic_stop"
                android:layout_marginRight="8dp"
                android:background="@drawable/sys_corner" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewPause"
                android:src="@drawable/sys_ic_pause"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/imageViewStop"
                android:background="@drawable/sys_corner"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewVolumeControl"
                android:src="@drawable/sys_ic_speaker"
                android:layout_toRightOf="@+id/imageViewPause"
                android:background="@drawable/sys_corner"/>
            <SeekBar
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarVolumeControl"
                android:layout_below="@+id/imageViewStop"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/textViewCountRight"
                android:text="3"
                android:textColor="#2334b6"
                android:textStyle="bold"
                android:background="@drawable/sys_corner"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/textViewScore"
                android:text="1"
                android:textColor="#ff6338"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/sys_corner"
                android:layout_toLeftOf="@+id/textViewCountRight"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sys_ic_listen"
            android:layout_marginTop="70dp"
            android:id="@+id/imageViewPlay"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer1"
                android:src="@drawable/plane"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:onClick="checkAnswer"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer2"
                android:src="@drawable/mango"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:onClick="checkAnswer"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer3"
                android:src="@drawable/crocodile"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="checkAnswer"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer1"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer3"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCount"
            android:text="7/50"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="15sp"/>
    </LinearLayout>

    <!--Layer2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#C8000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewStop2"
                android:src="@drawable/sys_ic_stop"
                android:layout_marginRight="8dp"
                android:background="@drawable/sys_corner"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewPause2"
                android:src="@drawable/sys_ic_pause"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/imageViewStop2"
                android:background="@drawable/sys_corner"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewVolumeControl2"
                android:src="@drawable/sys_ic_speaker"
                android:layout_toRightOf="@+id/imageViewPause2"
                android:background="@drawable/sys_corner"
                android:visibility="invisible"/>
            <SeekBar
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarVolumeControl2"
                android:layout_below="@+id/imageViewStop2"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/textViewCountRight2"
                android:text="3"
                android:textColor="#2334b6"
                android:textStyle="bold"
                android:background="@drawable/sys_corner"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/textViewScore2"
                android:text="1"
                android:textColor="#ff6338"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/sys_corner"
                android:layout_toLeftOf="@+id/textViewCountRight2"
                android:layout_marginRight="8dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sys_ic_listen"
            android:layout_marginTop="70dp"
            android:id="@+id/imageViewPlay2"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:padding="8dp"
            android:background="@drawable/sys_corner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer12"
                android:src="@drawable/plane"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:onClick="checkAnswer"
                android:visibility="invisible"
                android:background="@drawable/sys_corner"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer22"
                android:src="@drawable/mango"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:onClick="checkAnswer"
                android:visibility="invisible"
                android:background="@drawable/sys_corner"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAnswer32"
                android:src="@drawable/crocodile"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="checkAnswer"
                android:visibility="invisible"
                android:background="@drawable/sys_corner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer12"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer22"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnswer32"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#1536da"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!--Frame guide board-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sys_guide_board"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#ff6338"
            android:textStyle="bold"
            android:id="@+id/tvNext_GuideBoard"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGuide_GuideBoard"
            android:text="Guide..."
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tvNext_GuideBoard"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</RelativeLayout>
