<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.prj.fpt.project1ht.PlayActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/sys_bg_play"
    tools:context="android.prj.fpt.project1ht.PlayActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewStop1"
            android:src="@drawable/sys_ic_stop"
            android:layout_marginRight="8dp"
            android:background="@drawable/sys_corner_play"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPause1"
            android:src="@drawable/sys_ic_pause"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/imageViewStop1"
            android:background="@drawable/sys_corner_play"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewVolumeControl1"
            android:src="@drawable/sys_ic_speaker"
            android:layout_toRightOf="@+id/imageViewPause1"
            android:background="@drawable/sys_corner_play"/>
        <SeekBar
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeControl1"
            android:layout_below="@+id/imageViewStop1"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textViewCountRight1"
            android:text="0"
            android:textColor="#2334b6"
            android:textStyle="bold"
            android:background="@drawable/sys_corner_play"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/textViewScore1"
            android:text="0"
            android:textColor="#ff6338"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/sys_corner_play"
            android:layout_toLeftOf="@+id/textViewCountRight1"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:id="@+id/img1"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img2"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img3"
                android:src="@drawable/sys_ic_empty" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img4"
                android:src="@drawable/sys_ic_empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:id="@+id/img5"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img6"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img7"
                android:src="@drawable/sys_ic_empty" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img8"
                android:src="@drawable/sys_ic_empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Line4"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:id="@+id/img9"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img10"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img11"
                android:src="@drawable/sys_ic_empty" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img12"
                android:src="@drawable/sys_ic_empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Line5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:id="@+id/img13"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img14"
                android:src="@drawable/sys_ic_empty" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img15"
                android:src="@drawable/sys_ic_empty" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:id="@+id/img16"
                android:src="@drawable/sys_ic_empty" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/checkOk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Line2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check"
                android:src="@drawable/check"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>