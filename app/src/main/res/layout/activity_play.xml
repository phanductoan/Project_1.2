<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/sys_bg_play"
    tools:context="android.prj.fpt.project1ht.PlayActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewStop"
            android:src="@drawable/sys_ic_stop"
            android:layout_marginRight="8dp"
            android:background="@drawable/sys_corner_play"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPause"
            android:src="@drawable/sys_ic_pause"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/imageViewStop"
            android:background="@drawable/sys_corner_play"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewVolumeControl"
            android:src="@drawable/sys_ic_speaker"
            android:layout_toRightOf="@+id/imageViewPause"
            android:background="@drawable/sys_corner_play"/>
        <SeekBar
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeControl"
            android:layout_below="@+id/imageViewStop"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/textViewCountRight"
            android:text="0"
            android:textColor="#2334b6"
            android:textStyle="bold"
            android:background="@drawable/sys_corner_play"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/textViewScore"
            android:text="0"
            android:textColor="#ff6338"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/sys_corner_play"
            android:layout_toLeftOf="@+id/textViewCountRight"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sys_ic_listen"
        android:layout_marginTop="70dp"
        android:id="@+id/imageViewPlay"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer1"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:onClick="checkAnswer"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer2"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:onClick="checkAnswer"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAnswer3"
            android:src="@drawable/sys_ic_empty"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="checkAnswer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer1"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAnswer3"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#1536da"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCount"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="15sp"/>

</LinearLayout>
